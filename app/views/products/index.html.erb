<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Products</h1>
  <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
</div>

<% if @products.any? %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
          </div>
          <div class="card-footer bg-transparent">
            <%= link_to "View", product_path(product), class: "btn btn-sm btn-info" %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-sm btn-warning" %>
            <%= button_to "Delete", product_path(product), 
                          method: :delete, 
                          class: "btn btn-sm btn-danger",
                          form: { data: { turbo_confirm: "Are you sure?" } } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    No products yet. <%= link_to "Create your first product", new_product_path %>.
  </div>
<% end %>